
config defaultToCurrentScreen true
config nudgePercentOf screenSize
config resizePercentOf screenSize

# Aliases
alias halfWidth screenSizeX/2;screenSizeY
alias fullWidth screenSizeX;screenSizeY
alias open /usr/bin/open

alias  leftHalf move               screenOriginX;screenOriginY ${halfWidth}
alias rightHalf move screenOriginX+screenSizeX/2;screenOriginY ${halfWidth}
alias      full move               screenOriginX;screenOriginY ${fullWidth}

# Left and right halves
bind  left:alt;cmd ${leftHalf}
bind right:alt;cmd ${rightHalf}
bind     f:alt;cmd ${full}

# Resize
bind right:alt;ctrl;cmd resize +10% +0
bind  left:alt;ctrl;cmd resize -10% +0
bind  down:alt;ctrl;cmd resize +0   +10%
bind    up:alt;ctrl;cmd resize +0   -10%

# Move
bind right:alt;ctrl nudge +10% +0
bind  left:alt;ctrl nudge -10% +0
bind  down:alt;ctrl nudge +0   +10%
bind    up:alt;ctrl nudge +0   -10%

# Launch terminal
bind return:alt;shift shell path:~ '${open} -a Terminal .'
bind  space:cmd;shift grid 0:6,2

# Lock screen
bind l:ctrl;cmd shell '${open} -a /System/Library/Frameworks/ScreenSaver.framework/Versions/A/Resources/ScreenSaverEngine.app'
